                <th>
                    NumeroDeCompte
                </th> *@
                @*  <th>
                Gouvernorat
                </th>
                <th>
                Ville
                </th>
                <th>
                CodePostal
                </th>
                <th>
                Numéro
                </th>
                <th>
                Rue
                </th>
                <th>
                Résidence
                </th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Prenom</td>
                    <td>@item.Mobile</td>
                    @* <td>@item.Email</td>
                    <td>@item.PaysDeNaissance</td>
