                <td>@item.Rue</td>
                <td>@item.Résidence</td> *@
                    <td>
                        <a asp-controller="clientprospet" asp-action="UpdateClientProspet" asp-route-clientpropspetId="@item.Id_client" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>

                        <a asp-controller="clientprospet" asp-action="DeleteClientProspet" asp-route-clientpropspetId="@item.Id_client" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 